<div class="bookings-card-headers">
  <div class="bookings-card-section">
    <p><strong>studio</strong></p>
  </div>
  <div class="bookings-card-section">
    <p><strong>guest</strong></p>
  </div>
  <div class="bookings-card-section">
    <p><strong>description</strong></p>
  </div>
  <div class="bookings-card-section">
    <p><strong>start date</strong></p>
  </div>
  <div class="bookings-card-section">
    <p><strong>end date</strong></p>
  </div>
</div>

<% current_user.studios.each do |studio| %>
  <% studio.bookings.each do |booking| %>
    <%= link_to studio_path(booking.studio), class: 'd-flex align-items-center justify-content-center' do %>
      <div class="bookings-card" id="booking-<%= booking.id %>">
        <div class="bookings-card-section">
          <p><%= booking.studio.name %></p>
        </div>
        <div class="bookings-card-section">
          <p><%= booking.studio.user.first_name %> <%= booking.studio.user.last_name %></p>
        </div>
        <div class="bookings-card-section">
          <p><%= booking.description %></p>
        </div>
        <div class="bookings-card-section">
          <p><%= booking.booking_date_start %></p>
        </div>
        <div class="bookings-card-section">
          <p><%= booking.booking_date_end %></p>
        </div>
    <% end %>
        <div class="booking-card-section">
          <%= simple_form_for [studio, booking], remote: true, method: :patch, url: studio_booking_path(studio, booking) do |f| %>
            <%= f.hidden_field :approval, value: true %>
            <%= button_tag type: 'submit', class: "button postfix" do %>
                <i class="fas fa-check" aria-hidden="true"></i>
            <% end %>
          <% end %>
          <%= simple_form_for [studio, booking], remote: true, method: :patch, url: studio_booking_path(studio, booking) do |f| %>
            <%= f.hidden_field :approval, value: false %>
            <%= button_tag type: 'submit', class: "button postfix" do %>
                <i class="fas fa-times" aria-hidden="true"></i>
            <% end %>
          <% end %>
        </div>
      </div>
  <% end %>
<% end %>
